{{!--views/auth/signup.hbs --}}

<div class="login-style">
      <div class="forms-container">
        <div class="signin">
<form action="/signup" method="POST" class="sign-in-form">
                <h2 class="title">Sign up</h2>
            <div class="input-field"><i class="fas fa-user"></i>
              <input type="text" id="input-username" name="username" placeholder="Your username" />
            </div>
            <div class="input-field"><i class="fas fa-envelope"></i>
              <input type="email" id="input-email" name="email" placeholder="Your email" />
            </div>
            <div class="input-field"><i class="fas fa-lock"></i>
               <input type="current-password" name="password" id="input-password" placeholder="********" />
            </div>
            <div class="input-field"><i class="fas fa-phone"></i>
              <input type="number"  id="input-cellPhone"  name="cellphoneregister"  placeholder="Your cellPhone" />
            </div>
            <input type="submit" class="btn" value="Sign up" />
            <p class="social-text">Or Sign up with social platforms</p>
            <div class="social-media">
              <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
              <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>      
              <a href="#" class="social-icon"><i class="fab fa-google"></i></a>
              <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
            </div>
             {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
          </form>
  </div>
       